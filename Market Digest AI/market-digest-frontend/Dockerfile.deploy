# Stage 1: Build the React application for deployment
FROM node:18-alpine as build

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies for production
RUN npm ci --only=production

# Copy source code
COPY . .

# Build the static assets
RUN npm run build

# The output of this stage is the /app/dist directory.
# A platform like Netlify can be configured to use this directory for deployment.
